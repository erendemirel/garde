# Database

# CONDITIONAL. Required if you are going to use your own redis instance. Not required if you are using the docker-compose.yml file inside the project source code
REDIS_HOST=dev-redis

# CONDITIONAL. Required if you are going to use your own redis instance. Not required if you are using the docker-compose.yml file inside the project source code
REDIS_PORT=6379

# REQUIRED
REDIS_PASSWORD=redis

# OPTIONAL. Redis database to use
REDIS_DB=0


# Superuser

# REQUIRED. Must meet email format and length(max 254) requirements.
SUPERUSER_EMAIL=test.superuser@test.com
SUPERUSER_PASSWORD=DevAdminTest123!


# Domain

# REQUIRED. Can be any value if you are not going to use built-in TLS
DOMAIN_NAME=localhost


# TLS Configuration

# CONDITIONAL. Set to true if you want to use built-in TLS. Note that built-in TLS must be enabled for mTLS to work
USE_TLS=false

# CONDITIONAL. Required if USE_TLS is true
TLS_CERT_PATH=./certs/server-cert.pem

# CONDITIONAL. Required if USE_TLS is true
TLS_KEY_PATH=./certs/server-key.pem

# CONDITIONAL. Required if USE_TLS is true. Default is 8443
PORT=8443


# mTLS Configuration

# CONDITIONAL. Client CA certificates. Required if you want to use API-key authentication. Use comma to separate multiple paths
TLS_CA_PATH=./certs/ca-cert.pem


# Admin users

# OPTIONAL. Admin user emails and passwords inside a JSON. These users have admin privileges. If not set, only the superuser has admin access.
ADMIN_USERS_JSON={"test.admin@test.com":"DevAdminTest123!","test.admin.2@test.com":"DevAdminTest123!"}


# Service Authentication

# CONDITIONAL. For internal service communication. Required if you are going to integrate with internal services. Must be at least 20 characters long and contain at least one uppercase letter, one lowercase letter, one number and one special character
API_KEY=TestApiKey123!TestApiKey123!


# Email

# OPTIONAL
SMTP_HOST=smtp.gmail.com

# OPTIONAL
SMTP_PORT=587

# OPTIONAL
SMTP_USER=your-email@gmail.com

# OPTIONAL
SMTP_PASSWORD=your-app-specific-password

# OPTIONAL
SMTP_FROM=your-email@gmail.com


# HTTP server

# OPTIONAL. Set to 'release' in production
GIN_MODE=debug


# CORS Settings

# OPTIONAL. CORS configuration for allowed origins. For multiple values use a comma, e.g. http://localhost:5173,http://localhost:3000
CORS_ALLOW_ORIGINS=http://localhost:5173


# Other

# OPTIONAL. Set to DEBUG, INFO, WARN, or ERROR. Controls the verbosity of logs. Default is INFO
LOG_LEVEL=INFO

# OPTIONAL. Enforce MFA for all users. The default is false. Admin can enforce MFA for individual users later regardless
ENFORCE_MFA=false

# OPTIONAL. Rate limiter threshold per interval. Works based on IP. First parameter is the limit, and the second parameter is the interval in seconds, e.g., 30,10 means a maximum of 30 requets per 10 seconds
RATE_LIMIT=30,10

# OPTIONAL. Enable/disable user agent header check in the requests
DISABLE_USER_AGENT_CHECK=false

# OPTIONAL. Enable/disable IP blacklisting by security analyzer
DISABLE_IP_BLACKLISTING=false

# OPTIONAL. Enable/disable check for concurrent IP sessions
DISABLE_MULTIPLE_IP_CHECK=false

# OPTIONAL. Rapid request detection. Works based on user ID. First parameter is the req/min threshold, and the second one is timeout in miliseconds(time between two requests), e.g., "50,100" means maximum 50 req/min and block if requests are faster than 100ms apart. Set 0,0 to disable
RAPID_REQUEST_CONFIG=120,10